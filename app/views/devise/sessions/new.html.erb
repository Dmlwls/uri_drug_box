
<div class="modal fade" id="login" title="My modal">
  <div class="modal-header">
    <button aria-hidden="true" class="close" data-dismiss="modal" type="button">Ã—</button>
    <h3 id="myModalLabel">New Post</h3>
  </div>
  <div class="modal-body a-unique-class">
    New Post Body
  </div>
  <div class="modal-footer">
    <button aria-hidden="true" class="btn" data-dismiss="modal">Close</button>
  </div>
</div>

<div class="col-md-12">
    <h2 class="page-head-line">Sign in</h2>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading"></div>
            <div class="panel-body">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                
                <div class="field">
                  <%= f.label 'email:' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  <%= f.email_field :email, autofocus: true, autocomplete: "on" %>
                </div>

                <div class="field">
                  <%= f.label 'password:' %>
                  <%= f.password_field :password, autocomplete: "off" %>
                </div>

                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>

                <div class = "center" class="actions">
                  <%= f.submit "Sign in" %>
                </div>
              <% end %>
              <br>
              <div class = "center"><%= render "devise/shared/links" %><div>
          </div>
        </div>
      </div>
  </div>
</div>